<formula type="75" name="Nova" power="3" convergent="1" glitch="1">
  <reference t="C">
    Xn = X - (A / 3) * ((X*X*X) - 1) / (X*X) + C;
  </reference>
  <perturbation t="C">
    xn = ((1 - A / 3) - (A / 3) * (2 * X + x) / ((X*X * Xx*Xx))) * x + c;
  </perturbation>
  <derivative t="C">
    dn = d * ((1 - A/3) - (2 * A / 3) / (Xx^3)) + d0;
  </derivative>
  <glitch t="C" factorhi="1000000" factorlo="1">
    <reference>X * X * X - (2 * A) / (3 - A)</reference>
    <test>
      <lhs>norm(x * x * x)</lhs>
      <rhs>factor * norm(reference)</rhs>
      <cond>lhs &gt; rhs</cond>
      <size>rhs / lhs</size>
    </test>
    <test>
      <lhs>factor * norm(reference + x * (3 * X * Xx + x * x))</lhs>
      <rhs>norm(reference)</rhs>
      <cond>lhs &lt; rhs</cond>
      <size>lhs / rhs</size>
    </test>
  </glitch>
</formula>
